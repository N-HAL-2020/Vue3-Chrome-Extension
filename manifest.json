{
  "manifest_version": 3,
  "name": "Vue3 Chrome Extension",
  "version": "1.0.0",
  "action": { "default_popup": "src/pages/popup/index.html" },
  "permissions": ["activeTab", "tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/scripts/content/index.ts"]
    }
  ]
}
